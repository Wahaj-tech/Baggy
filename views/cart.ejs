<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <%- include('./partials/header') %>
    <% if(success && success.length>0){ %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
            <span class="inline-block mt-1 mb-1 text-white"><%= success[0] %></span>
        </div>
    <% } %>
    <% if(error && error.length>0){ %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
            <span class="inline-block mt-1 mb-1 text-white"><%= error[0] %></span>
        </div>
    <% } %>

    <div class="w-full h-screen flex items-start px-20 py-20 gap-10">
        <% if (user && user.cart && user.cart.length>0) { %>
        <% user.cart.forEach((item)=>{ %>
            <div class="w-[30%] rounded-md overflow-hidden">
                <div class="w-full h-80 bg-yellow-500">
                    <img class="h-[12rem]" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="">
                </div>
                <div class="w-full flex justify-between px-5 py-4">
                    <h3 class="text-2xl"><%=item.name%></h3>
                    <div class="flex items-center gap-2">
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                        <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                        <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                    </div>
                </div>
                <div class="flex items-center justify-between px-5 py-3">
                    <h4 class="text-lg">Net Total</h4>
                    <h2 class="text-lg">₹ 1200</h2>
                </div>
                <div class="px-5 py-3">
                    <a class="text-red-500" href="/removefromcart/<%= item._id %>">Remove</a>
                </div>
            </div>
            <div class="w-[70%]">
                <h3 class="text-xl">Price Breakdown</h3>
                <div class="px-10 mt-5">
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Total MRP</h4>
                        <h4>₹ 1920</h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Discount on MRP</h4>
                        <h4>₹ 0</h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Platform Fee</h4>
                        <h4>₹ 20</h4>
                    </div>
                    <div class="flex mt-2">
                        <h4 class="w-1/3">Shipping Fee</h4>
                        <h4>FREE</h4>
                    </div>
                </div>
                <div class="w-full h-[1px] bg-black mt-10"></div>
                <div class="flex mt-5">
                    <h3 class="w-1/3 text-xl">Total Amount</h3>
                    <h3 class="font-semibold text-xl text-green-600">₹ 1940</h3>
                </div>
                <form action=""></form>
            </div>
        <% }) %>
        <% } else { %>
            <div class="text-xl">Your cart is empty.</div>
        <% } %>
    </div>
</body>
</html>